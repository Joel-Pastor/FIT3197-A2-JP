{
"$schema":"https://vega.github.io/schema/vega-lite/v5.json",
"description":"Choropleth map showing total area burnt (in thousand hectares) by Australian state in 2019.",

"width":700,
"height":500,


"data":{"url":"STE_2016_AUST.json","format":{"type":"topojson","feature":"STE_2016_AUST"}},

"transform":[
  {"lookup":"properties.STE_NAME16","from":{"data":{"url":"State_processed_map.csv"},"key":"State","fields":
  ["Area Burnt", "Year"]}},
  
  {"filter":"datum.Year == 2019"}],
  
"mark":{"type":"geoshape","stroke":"white","strokeWidth":0.5},
  
  "encoding":{
    "color":{"field":"Area Burnt","type":"quantitative","title":"Area Burnt (km squared)","scale":{"scheme":"reds"}},
    
    "tooltip":[
      {"field":"properties.STE_NAME16","title":"State"},
      {"field":"Area Burnt","title":"Area Burnt (km squared)","format":","}]},
    
  "projection":{"type":"mercator"},
  "config":{"axis":{"labelFontSize":12,"titleFontSize":14},"view":{"stroke":"transparent"},"background":"#ffffff"}}