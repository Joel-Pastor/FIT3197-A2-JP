{
"$schema":"https://vega.github.io/schema/vega-lite/v5.json",

"data":{"url":"fire_area.csv"},

"width":510,
"height":360,

"transform":[

  {"pivot":"FireType","value":"Area","groupby":["Year"]},
  {"calculate":"(datum['Unplanned fire']/(datum['Planned fire']+datum['Unplanned fire']))*100",
  "as":"Unplanned_Percent"}],
  

"layer":[
  {"mark":{"type":"area","color":"#ad3737"},

  "encoding":{

    "x":{"field":"Year","type":"ordinal","title":"Year","scale":{"padding":0},"axis":{"titlePadding":20}},

    "y":{"field":"Unplanned_Percent","type":"quantitative","title":"Percent of Burnt Area Unplanned","scale":{"domain":[0,100]}}}},
    
    {"mark":{"type":"line","color":"#b00000","strokeWidth":3},

  "encoding":{
    
    "x":{"field":"Year","type":"ordinal"},

    "y":{"field":"Unplanned_Percent","type":"quantitative"},

    
    "tooltip":[


      {"field":"Year","title":"Year"},
      {"field":"Planned fire","title":"Planned (km squared)","format":",.0f"},
      {"field":"Unplanned fire","title":"Unplanned (km squared)","format":",.0f"},
      {"field":"Unplanned_Percent","title":"Percent Unplanned","format":".1f","formatExpr":"format(datum.Unplanned_Percent, '.1f') + '%'"}]}},
      
      {"mark":{"type":"text","align":"left","dx":-120,"dy":-20,"fontSize":13,"color":"#328fa8"},

    "encoding":{"text":{"value":"2019 had highest proportion of unplanned fires"},"x":{"datum":"2019-20" },"y":{"datum":80 }}}],
    
    "config":{"axis":{"labelFontSize":12,"titleFontSize":14},"view":{"stroke":"transparent" },"background":"white"}}