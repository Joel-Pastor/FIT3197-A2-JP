{
"$schema":"https://vega.github.io/schema/vega-lite/v5.json",

"data":{"url":"fire_area.csv"},

"width":510,
"height":360,

"layer":[
  
  {"selection":{"selection_fire":{"type":"multi","fields":["FireType"],"bind":"legend" }},

  "mark":{"type":"line","point":true,"strokeWidth":3},

  "encoding":{"color":{"field":"FireType","type":"nominal","title":"Fire Classification",

    "scale":{"domain":["All fire", "Planned fire", "Unplanned fire"],
    "range":["#e3560a", "#f08b47", "#ea9f12"]}},

  "x":{"field":"Year","type":"ordinal","title":"Year","axis":{"titlePadding":20},"scale":{ "padding":0,"paddingInner":0,"paddingOuter":0}},

  "y":{"field":"Area","type":"quantitative","title":"Burned Area (square km)","axis":{"grid":true}},

  "tooltip":[
    {"field":"Year","title":"Year"},
    {"field":"FireType","title":"Fire Classification"},
    { "field":"Area","title":"Burned Area (square km)","format":",.0f"}]}},

  {"mark":{"type":"text","align":"left","dx":5,"dy":-10,"fontSize":13,"color":"#328fa8"},
  
  "encoding":{"text":{"value":"2019 was a major bushfire season" },"x":{ "datum":"2019-20" },

    "y":{ "datum":21099}}}],

"config":{"axis":{"labelFontSize":12,"titleFontSize":14},"legend":{ "orient":"bottom"},"view":{ "stroke":"transparent"}}}