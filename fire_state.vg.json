{
"$schema":"https://vega.github.io/schema/vega-lite/v5.json",

"data":{"url":"State_processed.csv"},

"width":460,
"height":460,

"transform":[
  {"filter":"datum.Year == year_slider"},
  {"filter":"datum['Fire Type'] != 'All'"}],
  
"params":[

  {"name":"year_slider","value":2019,"bind":{"input":"range","min":2016,"max":2020,"step":1,"name":"Select a Year:"}}],
  
  "layer":[
    {"mark":{ "type":"bar","tooltip":true},

    "encoding":{

      "x":{"field":"State","type":"nominal","title":"State","axis":{"labelAngle":0}},
      
      "y":{"field":"Area Burnt","type":"quantitative","title":"Area Burnt (square km)","scale":{"domain":[0,9000]},
      
      "axis":{"titleFontWeight":"bold","titlePadding":25}},
      "color":{"field":"Fire Type","type":"nominal","title":"Fire Classification",
      "scale":{"domain":["Planned", "Unplanned"],"range":["#FF900A", "#F8420B"]}},

      "tooltip":[{"field":"State","title":"State"},{"field":"Fire Type","title":"Fire Classification"},
        {"field":"Area Burnt","title":"Burned Area (square km)","format":","},{"field":"Year","title":"Year"}]}},
        
      {"transform":[{ "filter":"year_slider == 2019" }],
      
      "mark":{"type":"text","text":"2019 was most damaging year overall","align":"center","baseline":"top","x":{"expr":"width/2"},"y":5,"fontSize":13,"color":"#328fa8"}}],
      
      "config":{"background":"#ffffff",
        "title":{"fontSize":18,"font":"Helvetica","fontWeight":"bold","color":"#78350f","anchor":"start"}},
        "axis":{"labelFontSize":14,"titleFontSize":16,"titleFontWeight":"bold"},
        "view":{ "stroke":"transparent"}}
