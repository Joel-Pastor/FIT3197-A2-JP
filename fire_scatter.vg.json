{
"$schema":"https://vega.github.io/schema/vega-lite/v5.json",

"data":{"url":"STE_2016_AUST.json","format":{"type":"topojson","feature":"STE_2016_AUST"}},

"transform":[
  {"lookup":"properties.STE_NAME16",
    "from":{"data":{"url":"State_processed_map.csv"}, "key":"State","fields":["Area Burnt","Year"]}},{"filter":"datum.Year == 2019" },

    {"calculate":"datum.properties.AREASQKM16/1000","as":"Area_thousand_km2"},{"calculate":"round(datum.Area_thousand_km2)","as":"Rounded_Area_thousand_km2"},

    {"calculate":"round(datum['Area Burnt'])","as":"Rounded_Area_Burnt"}],

"encoding":{

  "x":{"field":"Area_thousand_km2","type":"quantitative","title":"Total State Area (thousand sq km)","scale":{"type":"linear"},"axis":{"grid":true,"gridColor":"#ddd","tickCount":8}},
  
  "y":{"field":"Area Burnt","type":"quantitative","title":"Area Burnt (km squared)","axis":{"grid":true,"gridColor":"#ddd"}},

  "color":{"field":"properties.STE_NAME16","type":"nominal","title":"State","legend":{"orient":"right"},
    "scale":{"range":["#ef476f","#eab69f","#e07a5f","#8f5d5d","#3d405b","#81b29a","#babf95","#f2cc8f"]}},

  "tooltip":[
    {"field":"properties.STE_NAME16", "title":"State"},{"field":"Rounded_Area_thousand_km2","title":"Total Area (thousand km squared)","format":",.0f"},
    {"field":"Rounded_Area_Burnt","title":"Area Burnt (km squared)","format":",.0f"}]},
    
  "config":{"background":"#ffffff","view":{"stroke":"transparent"},"axis":{"labelFontSize":12,"titleFontSize":13,"titleFontWeight":"bold"}},

  "mark":{"type":"point","filled":true,"size":240,"stroke":"#fff","strokeWidth":0.8}}