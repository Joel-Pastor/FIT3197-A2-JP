{
"$schema":"https://vega.github.io/schema/vega-lite/v5.json",

"data":{"url":"land_type.csv"},

"mark":{"type":"bar"},

"width":510,
"height":360,

"encoding":{

  "y":{"field":"Land Type","type":"nominal","title":"Land Type","sort":"-x",
    "axis":{"titlePadding":20,"labelPadding":8,"labelFontSize":11,"titleFontSize":13,"titleFontWeight":"bold"}},

  "x":{"field":"Area Burnt","type":"quantitative","title":"Area Burnt (km squared)",
    "axis":{"format":",","labelExpr":"format(datum.value, ',')","labelFlush":true,"labelFontSize":11,"titleFontSize":13,"titleFontWeight":"bold"}},

  "color":{"field":"Percent Unplanned","type":"quantitative","title":"Percent Unplanned","scale":{"scheme":"reds"},

  "legend":{"orient":"bottom","titleFontSize":11,"titleFontWeight":"bold","labelFontSize":11,"format":".0f","labelExpr":"datum.label + '%'"}},

  "tooltip":[
    { "field":"Land Type","title":"Land Tenure Type"},
    {"field":"Area Burnt","type":"quantitative","title":"Area Burnt (km squared)","format":","},
    {"field":"Percent Unplanned","type":"quantitative","title":"Percent Unplanned","format":".1f","formatExpr":"format(datum['Percent Unplanned'], '.1f') + '%'"}]},
  
  "config":{
    "view":{"stroke":"transparent"},"axis":{"labelFontSize":12,"titleFontSize":14,"titleFontWeight":"bold"},
    "legend":{"orient":"bottom","titleFontSize":13,"titleFontWeight":"bold","labelFontSize":13},"background":"white"}}